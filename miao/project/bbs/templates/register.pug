extends simply-layout.pug

block content
  h1 Register
  form(action='/register' method='POST')
    .mb-3
      label.form-label(for='exampleInputEmail1') Username
      input.form-control(type='text' name='name')
    .mb-3
      label.form-label(for='exampleInputEmail1') Email address
      input#exampleInputEmail1.form-control(type='email' aria-describedby='emailHelp')
      #emailHelp.form-text We&apos;ll never share your email with anyone else.
    .mb-3
      label.form-label(for='exampleInputPassword1') Password
      input#exampleInputPassword1.form-control(type='password' name="password")
    .mb-3.form-check
      input#exampleCheck1.form-check-input(type='checkbox')
      label.form-check-label(for='exampleCheck1') Check me out
    button.btn.btn-primary(type='submit') Submit
    div
      | Username: 
      br
      input(type='text' name='name')
    div
      | Email: 
      br
      input(type='text' name='email')
    div
      | Password: 
      br
      input(type='text' name='password')
    button register
